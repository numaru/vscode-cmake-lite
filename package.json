{
    "name": "vscode-cmake-lite",
    "displayName": "CMake Lite",
    "description": "Lighweight CMake support in Visual Studio Code",
    "icon": "img/icon.png",
    "version": "0.1.0",
    "license": "MIT",
    "author": {
        "name": "Kin Numaru"
    },
    "publisher": "numaru",
    "homepage": "https://github.com/numaru/vscode-cmake-lite",
    "repository": {
        "type": "git",
        "url": "https://github.com/numaru/vscode-cmake-lite.git"
    },
    "bugs": {
        "url": "https://github.com/numaru/vscode-cmake-lite/issues"
    },
    "engines": {
        "vscode": "^1.41.1"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "cmake",
        "cpp",
        "c++",
        "cxx",
        "c"
    ],
    "activationEvents": [
        "workspaceContains:**/CMakeLists.txt"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-cmake-lite.selectActiveProject",
                "title": "Select Active Project",
                "category": "CMake"
            },
            {
                "command": "vscode-cmake-lite.activateProject",
                "title": "Activate Given Project",
                "category": "CMake"
            },
            {
                "command": "vscode-cmake-lite.activateLastProject",
                "title": "Activate Last Configured Project",
                "category": "CMake"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "vscode-cmake-lite.activateProject",
                    "when": "never"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint ./**/*.ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.4.0",
        "@types/vscode": "^1.41.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^10.2.0",
        "source-map-support": "^0.5.16",
        "typescript": "^3.7.5",
        "vsce": "^1.73.0",
        "vscode-test": "^1.3.0"
    },
    "extensionDependencies": [
        "ms-vscode.cpptools"
    ],
    "dependencies": {
        "@types/debounce": "^1.2.0",
        "common-path-prefix": "^3.0.0",
        "debounce": "^1.2.0",
        "vscode-cpptools": "^3.1.0",
        "vscode-jsonrpc": "^5.0.1",
        "winston": "^3.2.1",
        "winston-transport": "^4.3.0"
    }
}